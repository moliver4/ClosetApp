<div class="container text-center">
    <div class="row">
        <div class="col-xs-3">
            <h3><%=@closet.title%></h3>
            <h3><%= @category.title %> </h3>
        </div> 
    </div>
    <div class="row">
            <% @items.each do |item| %>
                <div class="col-sm-4"> 
                <% if item.photo.attached? %>
                    <%= link_to image_tag(item.photo, size: '250x250'), item_path(item), :class => "index_style_image" %>
                <% end %><br>
                <%= link_to item.real_name, item_path(item), class: "btn btn-info" %> 
                </div>
            <% end %>
    </div>
            

<br>
<%= button_to 'Back to Closet', closet_path(@closet), method: :get, class: "btn btn-info" %>
</div>
