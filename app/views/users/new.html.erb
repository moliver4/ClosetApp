<div class="container text-center">
    <h2>New User Sign Up</h2>
    <%= form_for @user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation%>
        <%= f.submit "Submit" %>
    <% end %>
</div>