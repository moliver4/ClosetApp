<div class="container text-center">
    <h2>Editing <%= @user.name %></h2>
    <%= form_for @user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <%= f.submit "Submit" %>
    <% end %>
</div>