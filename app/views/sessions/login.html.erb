<div class="container text-center">
    <br>
 
    <%= flash[:message] %>
    <%= form_for :auth do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Login", class: "btn btn-info" %>
    <% end %>
    <br>
    <%= button_to "Sign Up", signup_path, class: "btn btn-info"%>
</div>