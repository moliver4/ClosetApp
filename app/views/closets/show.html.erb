<div class="container"> 
    <div class="row">
        <div class="col-xs-3">
            <h3><%=@closet.title%></h3>
        </div>

        <div class="container"></div>
        <% @closet.items.each do |item| %>
            <div class="col-sm-4"> <% if item.photo.attached? %>
                <%= link_to image_tag(item.photo, size: '250x250'), item_path(item), :class => "index_style_image" %>
            <% end %><br>
            <%= link_to item.name, item_path(item) %> <br>
            </div>
        <% end %> 
    </div>
<br>

<p><%= link_to "Add Item", new_item_path %> </p>

<p> <% @categories.each do |category| %> 
        <%= link_to category.title, category_path(category) %>
    <% end %></p>

<%= button_to 'Delete Closet', closet_path(@closet), method: :delete %> 
</div>
