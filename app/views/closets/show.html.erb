<div class="container text-center">
    <div class="row">
        <div class="col-xs-3">
            <h3><%=@closet.title%></h3>
        </div>
    </div>
    <div class="row">
        <% @closet.items.each do |item| %>
            <div class="col-sm-4"> 
            <% if item.photo.attached? %>
                <%= link_to image_tag(item.photo, size: '250x250'), item_path(item), :html =>{:class => "index_style_image"}%>
            <% end %><br>
            <%= link_to item.name.capitalize, item_path(item), method: :get %> <br>
            </div>
        <% end %> 
    </div>

    
    <br>
    <div class='row'>
        <p> Categories: <% @categories.each do |category| %> 
            <%= button_to category.title, category_path(category), method: :get %>
        <% end %></p>
    </div>
    <br>

    <div><%= button_to "Add Item", new_item_path, method: :get %> </div><%= button_to 'Delete Closet', closet_path(@closet), method: :delete %> 

    <br>
    
</div>
