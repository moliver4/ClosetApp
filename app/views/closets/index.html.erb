<div class="container text-center">
    <br>
    <br>
    <h3> Welcome <%= @user.name %>! Here are your closets:</h3> <br><br>
        <div> 
        <% if (@closets.length == 0) %>
            <p>You have no closets available! <%= button_to 'Create a Closet', new_closet_path, method: :get, class: "btn btn-info" %> to get started! </p>
        <% else %> 
            <div class='container'> 
            <% @closets.each do |closet| %>
                <a class="btn btn-outline-info" href="/closets/<%=closet.id%>" role="button">
                    <%= closet.title %>
                </a> 
            <% end %>
        </div>
    <% end %>
    </div>
</div>

